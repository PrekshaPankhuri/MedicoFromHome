<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/DocName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Doctor name"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doctorExper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DocName"
            android:padding="10dp"
            android:text="Expertise"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/DoctType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctorExper"
            android:padding="10dp"
            android:text="Doctor Type"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/DoctTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DoctType"
            android:padding="10dp"
            android:text="Doctor Time"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/DocSpecification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DoctTime"
            android:padding="10dp"
            android:text="Doctor Specialisation"
            android:textColor="#000"
            android:textSize="25sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>